@model MinistryFunnel.FrontEnd.Models.LocationViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@if (Model != null)
{

    <h3>Are you sure you want to delete this record?</h3>
    <div>
        <h4>Name: @Model.Name</h4>
        <hr />

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Field Name</th>
                    <th scope="col">Field Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Name)</td>
                    <td>@Html.DisplayFor(model => model.Name)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.CreatedDateTime)</td>
                    <td>@Html.DisplayFor(model => model.CreatedDateTime)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.ModifiedDateTime)</td>
                    <td>@Html.DisplayFor(model => model.ModifiedDateTime)</td>
                </tr>
                <tr>
                    <td>@Html.DisplayNameFor(model => model.Archived)</td>
                    <td>@Html.DisplayFor(model => model.Archived)</td>
                </tr>
            </tbody>
        </table>


    </div>
    <div class="row">
        <div class="col-xs-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info" })
            </div>
            }
        </div>
    </div>
}
else
{
    <h3>This was not a valid ID to edit.</h3>
}