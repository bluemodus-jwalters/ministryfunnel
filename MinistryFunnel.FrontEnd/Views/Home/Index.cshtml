@{
    ViewBag.Title = "Home Page";

    string GetBorderClass(string approvalName)
    {
        //TODO: make this so it returns approved and not-approved colors of red and green. Need to figure out exactly what words they will use for that
        if (approvalName == "Approved")
        {
            return "border-success";
        }
        else
        {
            return "border-primary";
        }

    }

}
@model IEnumerable<MinistryFunnel.FrontEnd.Models.MinistryViewModel>

<div class="jumbotron">

    <img src="https://www.discoverychurch.org/wp-content/uploads/2020/02/Black_Logo.png" style="height: 60px; width: 200px;">
    <h1>Ministry Funnel</h1>
    <p class="lead">Discovery Church's program to manage and track ministries in the church.</p>
</div>

<div class="row">
    @foreach (var ministry in Model)
    {
        <div class="col-sm-6" style="padding-top: 15px;">
            <div class="card @GetBorderClass(ministry.ApprovalName)">
                <div class="card-body">
                    <h5 class="card-title">@ministry.Event</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@ministry.Purpose</h6>
                    <div>
                        <strong>Ministry Owner: </strong>@ministry.MinistryOwnerName
                    </div>
                    <div>
                        <strong>Campus: </strong>@ministry.CampusName
                    </div>
                    <div>
                        <strong>Desired Outcome: </strong>@ministry.DesiredOutcome
                    </div>
                    <div>
                        <strong>Practice: </strong>@ministry.PracticeName
                    </div>
                    <div>
                        <strong>Funnel: </strong>@ministry.FunnelName
                    </div>
                    <div>
                        <strong>Level of Importance: </strong>@ministry.LevelOfImportanceName
                    </div>
                    <div>
                        <strong>Start Date: </strong>@ministry.StartDate
                    </div>
                    <a href="/Ministry/Details/@ministry.Id" class="btn btn-primary">Details</a>
                    <a href="/Ministry/Edit/@ministry.Id" class="btn btn-success">Edit</a>

                </div>
            </div>
        </div>
    }
</div>


