<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ministry Funnel - Discovery Church</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dashboard", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Administration</a>
                        <div class="dropdown-menu">
                            @Html.ActionLink("Ministry Owner", "Index", "MinistryOwner", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Practice", "Index", "Practice", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Funnel", "Index", "Funnel", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Campus", "Index", "Campus", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Resource Involvement", "Index", "ResourceInvolvement", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Level of Importance", "Index", "LevelOfImportance", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Location", "Index", "Location", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Up In Out", "Index", "UpInOut", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Approval", "Index", "Approval", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Frequency", "Index", "Frequency", null, new { @class = "dropdown-item" })
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @Html.Action(actionName: "TempMessage", controllerName: "Message")
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Discovery Church</p>
        </footer>
    </div>  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
